<UserControl x:Class="Szpital.Views.Receptionist.ReceptionistHomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Szpital.Views.Receptionist" xmlns:viewmodels="clr-namespace:Szpital.ViewModels" xmlns:fa="http://schemas.fontawesome.io/icons/" d:DataContext="{d:DesignInstance Type=viewmodels:ReceptionistHomeViewModel}"
             mc:Ignorable="d">
    <Border CornerRadius="0 0 10 0">
        <Border Style="{StaticResource HomeBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="70*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Style="{StaticResource HomeWelcomeTextBlock}"
                           Text="{Binding WelcomeText}" />
                </StackPanel>
                <StackPanel Grid.Row="1" Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                    <Button Style="{StaticResource HomeButton}" Command="{Binding ChangeToVisits}">
                        <StackPanel>
                            <fa:ImageAwesome Style="{StaticResource homeButtonIcon}" Icon="Calendar" />
                            <TextBlock Style="{StaticResource homeButtonText}" Text="Wizyty" />
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource HomeButton}" Command="{Binding ChangeToDoctors}">
                        <StackPanel>
                            <fa:ImageAwesome Style="{StaticResource homeButtonIcon}" Icon="Group" />
                            <TextBlock Style="{StaticResource homeButtonText}" Text="Lekarze" />
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource HomeButton}" Command="{Binding ChangeToAddPatient}">
                        <StackPanel>
                            <fa:ImageAwesome Style="{StaticResource homeButtonIcon}" Icon="PlusCircle" />
                            <TextBlock FontSize="23" Style="{StaticResource homeButtonText}" Text="Dodaj pacjenta" />
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource HomeButton}" Command="{Binding ChangeToUserInfo}">
                        <StackPanel>
                            <fa:ImageAwesome Margin="0 5 0 5" Style="{StaticResource homeButtonIcon}" Icon="User" />
                            <TextBlock FontSize="20" Style="{StaticResource homeButtonText}" Text="Dane personalne" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</UserControl>
